<h3>New Comment</h3>
<% comment =  Comment.new %>
<%= form_for comment, :url => { :controller => "comments", :action => "create" } do |f| %>
  <%= f.hidden_field :post_id, :value => post.id %>
  <div>
    <%= f.text_area :content, :rows => "8", :class => 'input-xxlarge' %>
  </div>
  <div>
    <%= f.submit "Create", :class => "btn btn-success" %>
  </div>
<% end %>